{
  "name": "piksel",
  "version": "1.0.0",
  "description": "simple image viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "image-viewer",
    "desktop-app"
  ],
  "author": "Kaan Baha Sever",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.4.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.bumerang.piksel",
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico",
      "fileAssociations": [
        {
          "ext": [
            "png",
            "jpg",
            "jpeg",
            "gif",
            "webp",
            "bmp",
            "ico",
            "tiff",
            "svg"
          ],
          "name": "Image Files"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/app.icns",
      "fileAssociations": [
        {
          "ext": [
            "png",
            "jpg",
            "jpeg",
            "gif",
            "webp",
            "bmp",
            "ico",
            "tiff",
            "svg"
          ],
          "name": "Image Files"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/app.png",
      "fileAssociations": [
        {
          "ext": [
            "png",
            "jpg",
            "jpeg",
            "gif",
            "webp",
            "bmp",
            "ico",
            "tiff",
            "svg"
          ],
          "mimeType": "image/*",
          "name": "Image Files"
        }
      ]
    }
  }
}